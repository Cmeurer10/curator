<%= simple_form_for([@course, @book]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :author %>
  </div>

  <div class="form-inputs">
    <%= f.input :publisher %>
  </div>

  <div class="form-inputs">
    <%= f.input :isbn %>
  </div>

  <div>
    <%= f.label :cover %>
    <%= f.file_field :cover %>
    <%= f.hidden_field :cover_cache %>
  </div>

  <div>
    <%= f.label :file %>
    <%= f.file_field :file %>
    <%= f.hidden_field :file_cache %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

