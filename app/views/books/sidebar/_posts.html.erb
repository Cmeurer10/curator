<div id='post-container'>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <p><%= post.content %></p>
        <p>Posted by: <%= post.user.full_name %> at <%= post.created_at %></p>
        <% if current_user.role == 2 || current_user.role == 1 || current_user == post.user %>
          <p>
            <%= link_to "Edit" %> |
            <%= link_to 'Delete', book_conversation_post_path(@book, @conversation, post),
                method: :delete, remote: true, data: {confirm: "Are you sure you want to delete this post?"} %>
          </p>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= render "/posts/form", locals: {post: @post, book: @book, conversation: @conversation} %>
  <div class="btn btn-primary" id='new-post-btn'>New Post</div>
</div>
