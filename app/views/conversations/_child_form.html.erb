<% @conversation = Conversation.new %>
<%= simple_form_for([@book, @conversation], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.label "Topic/Question" %>
  	<%= f.hidden_field :parent_id, value: "" %>
    <!-- # TODO: move to controller rather than hidden_field-->
  	<%= f.hidden_field :book_id, value: @book.id %>
    <!-- # TODO: move to controller rather than hidden_field-->
  	<%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.input :topic, as: :text, label: false %>
  </div>

  <div class="form-actions">
	  <div class="modal-footer">
    <div class="row">
      <div class="col-xs-12">
	       <%= f.submit "Start a Conversation", class: "btn btn-primary", id: "new-convo-submit"  %>
      </div>
    </div>
	  </div>
  </div>
<% end %>
